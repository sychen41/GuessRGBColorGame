<% include partials/header %>

<a href='/blogs/new'>Add a new blog</a>
<% blogs.forEach(function(blog){ %>
    <div>
        <h2><%= blog.title %></h2>
        <span><%= blog.dateCreated %></span>
        <img src='<%= blog.image %>'>
        <p><%= blog.body.substring(0,100) %>...</p>
        <a href='/blogs/<%= blog._id %>'>Read More</a>
    </div>
<% }); %>

<% include partials/footer %>