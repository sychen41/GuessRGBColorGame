<% include ../partials/header %>
    
    <div class='container'>
        <div class='row'>
            <h1 style='text-align: center'>add a new comment to <%= landscape.name %></h1>
            <div style='width: 30%; margin: 30px auto;'>
                <form action='/landscapes/<%= landscape._id %>/comments' method='post'>
                    <div class='form-group'>
                        <input class='form-control' type='text' name='comment[text]' placeholder='text'>
                    </div>
                    <div class='form-group'>
                        <button class='btn btn-lg btn-primary btn-block' type='submit'>Submit</button>
                    </div>
                </form>
                <a href='/landscapes'>Go Back</a>
            </div>
            
        </div>
    </div>
    
<% include ../partials/footer %>